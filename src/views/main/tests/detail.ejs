        </table>
        <div class="col-xs-12">
            <form class="form-horizontal" action="/tests/update/<%= product._id %>?_method=PUT" method="POST">
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <div>
                            <button class="btn btn-info" type="submit">
