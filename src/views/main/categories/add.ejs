<% extend("../master") %>

<div class="main-content-inner">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="/">
                Trang chủ
            </a>
        </li>
        <li>
            <a href="/categories">
                Danh mục
            </a>
        </li>
        <li class="active">Thêm danh mục</li>
    </ul>
    <div class="page-content">
        <div class="page-header">
            <h1>Thêm mới danh mục</h1>
        </div>
        <%- include("alert"); %>
        <div class="row">
            <div class="col-xs-12">
                <form class="form-horizontal" method="POST" action="/categories">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right">Tiêu đề</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name"
                                        value="<%= value.length !== 0 ? value[0].name : '' %>" placeholder="Name"
                                        class="col-xs-10 col-sm-7" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right">Nội dung</label>
                                <div class="col-sm-10">
                                    <textarea name="description"
                                        value="<%= value.length !== 0 ? value[0].description : '' %>"
                                        class="col-xs-10 col-sm-7"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <div>
                                <button class="btn btn-info" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Thêm mới
                                </button>
                                <a href="/categories" class="btn btn-warning" role="button">
                                    <i class="ace-icon fa fa-close bigger-110"></i>
                                    Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>