<% extend("../master") %>

<div class="main-content-inner">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="/">
                Trang chủ
            </a>
        </li>
        <li>
            <a href="/blogs">
                Blogs
            </a>
        </li>
        <li class="active">Cập nhật blog</li>
    </ul>
    <div class="page-content">
        <div class="page-header">
            <h1>Cập nhật Blog</h1>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right">Tiêu đề</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" placeholder="Name" class="col-xs-10 col-sm-7" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right">Nội dung</label>
                                <div class="col-sm-10">
                                    <textarea id="editor" name="content" class="col-xs-10 col-sm-7">
                                        Nội dung
                                    </textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 form-actions">
                            <div class="form-group">
                                <label class="col-sm-2 control-label no-padding-right">Ảnh</label>
                                <div class="col-sm-10">
                                    <input type="text" name="image" placeholder="Image" class="col-xs-10 col-sm-7" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <div>
                                <button class="btn btn-info" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Cập nhật
                                </button>
                                <a href="/blogs" class="btn btn-warning" role="button">
                                    <i class="ace-icon fa fa-close bigger-110"></i>
                                    Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>